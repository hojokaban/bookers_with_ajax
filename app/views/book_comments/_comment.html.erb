<!-- recieves collection(comments) -->

<tr id="comment_<%= comment.id.to_s%>">
<td  class="col-xs-10"><%= comment.content %></td>

<% if comment.user_id == current_user.id %>
<td><%= link_to "Delete", comments_path(comment), method: :delete, remote: true, "data-confirm" => "本当に消しますか？", class:"btn btn-danger" %></td>
<% end %>
</tr>