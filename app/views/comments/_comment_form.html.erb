<!-- recieves book comment -->

<td colspan="2">
	<%= form_with model: comment, url: comment_path(book), remote: false do |f| %>
	 <%= hidden_field_tag :book_id, book.id %>
	 <%= f.text_area :content, placeholder: "Comment here...", class:"col-xs-10" %>
	 <%= f.submit "送信" %>
	<% end %>
</td>