<!-- recieves users -->

<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
		</tr>
	</thead>
	<% users.each do |user| %>
	<tbody>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "noimages.png", size:'50x50' %></td>
			<td><%= user.name %></td>
			<td><%= pluralize(user.following.count, 'following')%></td>
			<td><%= pluralize(user.followers.count, 'follower')%></td>
			<td><%= render 'users/follow_link', user: user %></td>
			<td><%= link_to "Show", user %></td>
		</tr>
	</tbody>
	<% end %>
</table>