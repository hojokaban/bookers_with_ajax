<div class="row">
	<%= render 'layouts/sidebar', book: @book, user: current_user %>
	<div class="col-xs-9">
		<h2>Users</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
				</tr>
			</thead>
			<% @users.each do |user| %>
			<tbody>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "noimages.png", size:'50x50' %></td>
					<td><%= user.name %></td>
					<td><%= link_to "Show", user %></td>
				</tr>
			</tbody>
			<% end %>
		</table>
	</div>
</div>
