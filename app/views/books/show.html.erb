
<div class="row">
	<%= render 'layouts/sidebar', book: @book_new, user: @user %>
	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<th style="font-weight: 20;"><%= link_to user_path(@book.user) do %><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "noimages.png", size:'50x50' %><br><%= @book.user.name %><% end %></th>
			<th style="font-weight: 20;"><%= link_to @book.title, book_path(@book) %></th>
			<th style="font-weight: 20;"><%= @book.body %></th>
			<th><%= render 'books/favorite', book: @book %></th>
			<%= render 'edit_destroy_buttons', book: @book %>
		</table>
	</div>
</div>
