
<div class="row">
	<%= render 'layouts/sidebar', book: @book_new, user: @user %>
	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<tr>
				<td style="font-weight: 20;"><%= link_to user_path(@book.user) do %><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "noimages.png", size:'50x50' %><br><%= @book.user.name %><% end %></td>
				<td style="font-weight: 20;"><%= link_to @book.title, book_path(@book) %></td>
				<td style="font-weight: 20;"><%= @book.body %></td>
				<%= render 'books/favorite', book: @book %>
				<%= render 'books/edit_destroy_buttons', book: @book %>
			</tr>
		</table>
		<table class="table">
			<h3>Comments</h3>
			<%= render 'books/comments', comments: @comments, book: @book %>
			<tr><%= render 'devise/shared/error_messages', resource: @comment %></tr>
			<tr><%= render 'books/comment_form', book: @book, comment: @comment %></tr>
		</table>
	</div>
</div>