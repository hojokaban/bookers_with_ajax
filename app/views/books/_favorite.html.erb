<!-- recieves book -->

<% if book.favorited_by?(current_user) %>
  <%= link_to favorites_path(book), method: :delete do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to favorite_path(book), method: :post do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>
<%= book.favorites_count %>